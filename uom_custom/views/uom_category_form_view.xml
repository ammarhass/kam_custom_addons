<odoo>
    <data>
           <record id='inherit_uom_category_form_view' model="ir.ui.view">
            <field name="name">inherit.uom.category.form.view</field>
            <field name="model">uom.category</field>
            <field name="inherit_id" ref="uom.product_uom_categ_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_weight" string="Weight Availability"/>
                </xpath>
            </field>

        </record>
    </data>
</odoo>